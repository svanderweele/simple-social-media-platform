{
  "name": "backend",
  "version": "0.0.1",
  "description": "A simple CRUD app which allows users to create accounts and send friend requests.",
  "main": "src/main.ts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:package-a && npm run build:package-b",
    "build:package-a": "cd packages/account-service && npm run build",
    "build:package-b": "cd packages/realtime-service && npm run build",
    "prepare": "husky",
    "test": "npm run test --workspaces --if-present"
  },
  "keywords": [
    "express",
    "social-media-platform"
  ],
  "author": "Simon van der Weele",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.6.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.16.0"
  },
  "dependencies": {
    "express-rate-limit": "^7.4.0"
  }
}
